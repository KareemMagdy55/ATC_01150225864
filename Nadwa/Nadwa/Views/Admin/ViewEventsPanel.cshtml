@model SearchQueryViewModel

@{
    ViewData["Title"] = "Admin events panel";
    Layout = "_Layout";
}

<div class="container">
    <h2 class="mb-4">Events Management</h2>
    <form asp-action="Index" method="get" class="row mb-4">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" name="SearchTerm" class="form-control" placeholder="Search events..." value="@Model?.Query" />
                <button type="submit" class="btn btn-outline-primary">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </div>
        <div class="col-md-3">
            <div class="input-group">
                <input type="number" name="MinPrice" class="form-control" placeholder="Min Price" value="@Model?.MinPrice" />
                <span class="input-group-text">-</span>
                <input type="number" name="MaxPrice" class="form-control" placeholder="Max Price" value="@Model?.MaxPrice" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="input-group">
                <input type="date" name="From" class="form-control" value="@Model?.FromDate?.ToString("yyyy-MM-dd")" />
                <span class="input-group-text">-</span>
                <input type="date" name="To" class="form-control" value="@Model?.ToDate?.ToString("yyyy-MM-dd")" />
            </div>
        </div>
    </form>

    
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @if (!ViewBag.isCountEqualZero) {
            foreach (var item in (IEnumerable<Event>)ViewBag.lst) {
                Console.WriteLine("Events is not empty");
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>@item.Date.ToString("yyyy-MM-dd")</td>
                    <td>
                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        }
        else {
            <tr>
                <td colspan="5" class="text-center">No events available</td>
            </tr>
        }
        </tbody>
    </table>
    <a asp-action="ViewEventsPanel" asp-route-page="@(Model.Page + 1)"
       asp-route-SearchTerm="@Model.Query"
       asp-route-MinPrice="@Model.MinPrice"
       asp-route-MaxPrice="@Model.MaxPrice"
       asp-route-From="@Model.FromDate"
       asp-route-To="@Model.ToDate" 
       class="btn btn-outline-secondary">Next</a>
    <div class="col-12 text-end">
        <button type="submit" class="btn btn-primary" style="margin-top: -7vh">Confirm Filter</button>
    </div>
</div>