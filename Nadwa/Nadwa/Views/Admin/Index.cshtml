@{
Layout = "_Layout";
ViewData["Title"] = "Admin Panel";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card mb-4 shadow-lg">
            <div class="card-body d-flex flex-column align-items-center">
                <i class="bi bi-people-fill mb-2" style="font-size: 3rem;"></i>
                <h2 class="h4 card-title mb-2">User Management</h2>
                <p class="card-text text-center mb-3">Add, View, Edit, and Delete Users</p>
                <a asp-area="" asp-controller="Users" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-arrow-right-circle me-2"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card mb-4 shadow-lg">
            <div class="card-body d-flex flex-column align-items-center">
                <i class="bi bi-calendar-event-fill mb-2" style="font-size: 3rem;"></i>
                <h2 class="h4 card-title mb-2">Event Management</h2>
                <p class="card-text text-center mb-3">Add, View, Edit, and Delete Events.</p>
                <a asp-area="" asp-controller="Admin" asp-action="ViewEventsPanel" class="btn btn-primary">
                    <i class="bi bi-arrow-right-circle me-2"></i>
                </a>
            </div>
        </div>
    </div>
</div>
